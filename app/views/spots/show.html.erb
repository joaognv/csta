<!-- Banner -->
<div class="subpage_banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.4) 50%), url(<%= asset_path 'socks_feet' %>);">
  <div>

  </div>
</div>

<!-- Everything between banner and map -->
<div class="spot_wrapper">

  <div class="bg-img"
        style="background-image: url('<%= @spot.photo.present? ? cl_image_path(@spot.photo) : "http://www.muebles.com/wp-content/uploads/2013/02/Ambiente-Terraza-Rattan-sintetico.jpg"; %>')">
  </div>

  <div class="spot-details">
    <div class="booking-form">
      <h3 style="color: white;"> Book now!</h3>

      <%= simple_form_for([@spot, @booking]) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :time_arrive, as: :date %>
          <%= f.input :time_leave, as: :date %>
        </div>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>
    </div>
 </div>

  <div class="spot-info-wrapper">
    <div class="spot-info">
      <ul class="list-unstyled">
         <li><h4> <strong>Details:</strong></h4><h6> <%= @spot.description %> </h6></li>
         <li><h4> <strong>City:</strong></h4><h6> <%= @spot.city %> </h6></li>
         <li><h4> <strong>Price:</strong></h4><h6> $<%= @spot.price %> </h6></li>
      </ul>
    </div>
  </div>

</div>


<!-- Map -->
<div
  id="map"
  style="width: 100%;
  height: 400px;"
  data-markers="<%= @markers.to_json %>"
></div>


