
<div class="user-onboarding">
  <div class="sign-card">
    <h3 class="sign-title" >Sign up</h3>
      <div class="devise-form">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :full_name, placeholder: "JoÃ£o Viana", required: true, autofocus: true %>
            <%= f.input :email, placeholder: "example@gmail.com", required: true, autofocus: true %>
            <%= f.input :password, placeholder: "Password", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, placeholder: "Password confirm", required: true %>
          </div>



          <div class="form-actions">
            <%= f.button :submit, "Sign up" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
  </div>
</div>


